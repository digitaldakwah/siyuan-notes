#---------------------------------------------------------------------
# SiYuan Docker Compose Configuration
#
# This file defines the environment variables for the SiYuan service.
# Copy this file to .env and fill in your specific values.
#---------------------------------------------------------------------

# --- Core SiYuan Settings ---
COMPOSE_PROJECT_NAME=siyuan
SIYUAN_VERSION=latest
SIYUAN_PORT=6806
SIYUAN_AUTH_CODE=CHANGE_THIS_TO_SECURE_PASSWORD

# --- Localization ---
# Timezone
TZ=Asia/Kuala_Lumpur

# --- Permissions ---
# User/Group IDs - run 'id $USER' to get your values
PUID=1000
PGID=1000

# --- Data & Backup Paths ---
# Data Paths - adjusted for /home/kopiahhaji/siyuan-notes
DATA_PATH=/home/kopiahhaji/siyuan-notes/data
WORKSPACE_PATH=/home/kopiahhaji/siyuan-notes/data/workspace
CONFIG_PATH=/home/kopiahhaji/siyuan-notes/data/config
LOGS_PATH=/home/kopiahhaji/siyuan-notes/data/logs
BACKUP_PATH=/home/kopiahhaji/siyuan-notes/backups

# --- Nginx Proxy (Optional) ---
# Nginx Configuration (optional)
NGINX_PORT_HTTP=80
NGINX_PORT_HTTPS=443
DOMAIN_NAME=notes.digitaldakwah.org
SSL_CERT_PATH=/home/kopiahhaji/siyuan-notes/nginx/certs

# --- Resource Management ---
# Resource Limits
SIYUAN_MEMORY_LIMIT=2g
SIYUAN_MEMORY_RESERVATION=512m
SIYUAN_CPU_LIMIT=2.0

# --- Backup Policy ---
# Backup Retention
BACKUP_RETENTION_DAYS=30

# --- Docker Networking ---
# Docker Network
SIYUAN_NETWORK_SUBNET=172.20.0.0/24
SIYUAN_NETWORK_GATEWAY=172.20.0.1
